{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "checkJs": false,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "includes": [
    "types/**/*",
    "lib/**/*"
  ]
}